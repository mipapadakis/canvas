<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/layer_outer_card"
        android:layout_width="@dimen/layer_card_view_size"
        android:layout_height="@dimen/layer_card_view_size"
        android:layout_margin="4dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        app:cardBackgroundColor="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/layer_inner_card"
            android:layout_width="@dimen/layer_inner_card_view_size"
            android:layout_height="@dimen/layer_inner_card_view_size"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <ImageView
                android:id="@+id/layer_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/png_background"
                android:scaleType="fitCenter"
                android:contentDescription="@string/layer_card_view_description" />
        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/layer_menu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|start"
            android:background="@color/white"
            android:src="@drawable/baseline_more_vert_black_18"
            android:contentDescription="@string/layer_card_view_description"/>

        <ImageButton
            android:id="@+id/layer_visibility"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|end"
            android:background="@color/white"
            android:src="@drawable/baseline_visibility_black_18"
            android:contentDescription="@string/layer_card_view_description"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/layer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="2dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="Layer"
        android:contentDescription="@string/layer_card_view_description"/>
    <!--
    <ImageButton
        android:id="@+id/layer_reorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_swap_horizontal_circle_black_24"
        android:contentDescription="@string/layer_card_view_description"
        android:visibility="gone"                                         />-->
</LinearLayout>